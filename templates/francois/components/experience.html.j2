{# Experience Section Component #}
<section class="cv-section cv-experience">
    <h2 class="cv-section-header" id="work-experience">Work Experience</h2>
    
    {% for exp in experiences %}
    <div class="cv-experience-item" id="cv-exp-{{ exp.company.lower().replace(' ', '-') }}">
        {# Company and location header #}
        <div class="cv-entry-header">
            <h3 class="cv-company-name">{{ exp.company }}</h3>
            <span class="cv-company-location"><em>{{ exp.location }}</em></span>
        </div>
        
        {# Position and date header #}
        <div class="cv-position-header">
            <p class="cv-position-title">
                <strong>{{ exp.position }}</strong>
                {% if exp.reference %}
                <span class="cv-reference">{{ exp.reference }}</span>
                {% endif %}
            </p>
            <span class="cv-company-period"><em>{{ exp.period }}</em></span>
        </div>
        
        {# Achievements list #}
        {% if exp.achievements %}
        <ul class="cv-achievements">
            {% for achievement in exp.achievements %}
            <li class="cv-achievement">{{ achievement.text | markdown | safe }}</li>
            {% endfor %}
        </ul>
        {% endif %}
        
        {# Skills tags #}
        {% if exp.skills_tags %}
        <div class="cv-skills-tags skills-tags">
            {% for tag in exp.skills_tags.split(',') %}
            <span class="cv-skill-tag skill-tag">{{ tag.strip() }}</span>
            {% endfor %}
        </div>
        {% endif %}
    </div>
    {% endfor %}
</section>