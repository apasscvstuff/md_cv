{# Technical Skills Layout - 3-column table format #}
<div class="cv-skills-table-container">
    <table class="cv-skills-table">
        <thead>
            <tr>
                <th class="cv-skills-header"><strong>Software Engineering</strong></th>
                <th class="cv-skills-header"><strong>ML &amp; LLMs</strong></th>
                <th class="cv-skills-header"><strong>Data Science</strong></th>
            </tr>
        </thead>
        <tbody>
            {# Prepare column data #}
            {% set col1_items = (skills.programming_languages or []) + (skills.core_technologies or []) %}
            {% set col2_items = [] %}
            {% if skills.domain_expertise and skills.domain_expertise.skills %}
                {% set col2_items = skills.domain_expertise.skills %}
                {% if skills.domain_expertise.secondary_skills %}
                    {% set col2_items = col2_items + skills.domain_expertise.secondary_skills %}
                {% endif %}
            {% endif %}
            {% set col3_items = (skills.tools_platforms or []) + (skills.project_management or []) %}
            
            {# Calculate max rows needed #}
            {% set max_items = [col1_items|length, col2_items|length, col3_items|length] | max %}
            
            {# Generate table rows #}
            {% for i in range(max_items) %}
            <tr class="cv-skills-row">
                <td class="cv-skill-item">
                    {% if i < col1_items|length %}✓ {{ col1_items[i] }}{% endif %}
                </td>
                <td class="cv-skill-item">
                    {% if i < col2_items|length %}✓ {{ col2_items[i] }}{% endif %}
                </td>
                <td class="cv-skill-item">
                    {% if i < col3_items|length %}✓ {{ col3_items[i] }}{% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{# Medical Device section if applicable #}
{% if skills.medical_device %}
<div class="cv-skill-category cv-medical-device">
    <p class="cv-skill-category-header">
        <strong>Medical Device Development</strong>: 
        {{ skills.medical_device.skills | join(' • ') }}
    </p>
</div>
{% endif %}