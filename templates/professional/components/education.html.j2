{# Education Section Component #}
{% if education %}
<section class="cv-section cv-education">
    <h2 class="cv-section-header" id="education">Education</h2>
    
    {% for edu in education %}
    <div class="cv-education-item" id="cv-edu-{{ (edu.institution_full or edu.institution).lower().replace(' ', '-').replace("'", '').replace('Ã©', 'e') }}">
        {# Institution and location header #}
        <div class="cv-entry-header">
            <h3 class="cv-institution-name">{{ edu.institution }}</h3>
            <span class="cv-education-location"><em>{{ edu.location }}</em></span>
        </div>
        
        {# Degree and date header #}
        <div class="cv-position-header">
            <p class="cv-degree-title"><strong>{{ edu.degree }}</strong></p>
            {% if edu.start_date and edu.end_date %}
            <span class="cv-education-period"><em>{{ edu.start_date }} - {{ edu.end_date }}</em></span>
            {% endif %}
        </div>
        
        {# Technical highlight if available #}
        {% if edu.technical_highlight %}
        <div class="cv-education-highlight">{{ edu.technical_highlight | markdown | safe }}</div>
        {% endif %}
    </div>
    {% endfor %}
</section>
{% endif %}